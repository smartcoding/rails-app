<%= semantic_form_for(@post) do |f| %>
  <%= f.inputs do %>
    <%= f.input :category, as: :hidden, input_html: { :value => @post.category } %>
    <%= f.input :description %>
    <%= f.input :body %>
    <% if @post.category == :problem %>
      <%= f.input :solution %><br />
    <% end %>
    <% if @post.category == :question %>
      <%= f.input :answer %><br />
    <% end %>
    <%= f.input :tag_list, input_html: { :data => {
                             :feed_url => '/tags.json',
                             :placeholder => 'type in related tags' } } %>
    <%= f.input :origin_list, input_html: { :data => {
                                :feed_url => '/origins.json',
                                :placeholder => 'give credit to original source' } } %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
  <% end %>
<% end %>
