<%= semantic_form_for(@post) do |f| %>
  <%= f.inputs do %>
    <%= f.input :category, as: :hidden, input_html: { :value => @post.category } %>
    <%= f.input :body %>
    <% if ['problem', 'question'].include? @post.category %>
      <%= f.input :additional_body %><br />
    <% end %>
    <%= f.input :tag_list %>
    <%= f.input :origin_list %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
  <% end %>
<% end %>
