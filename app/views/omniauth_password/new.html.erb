<%= form_tag auth_login_path do %>
  <%= render 'common/form_errors', object: @user %>

  <div><%= label_tag "email" %><br />
  <%= @user.email %></div>
  <%= hidden_field_tag :email, @user.email %>

  <div><%= label_tag :password %><br />
  <%= password_field_tag "password" %></div>

  <div><%= submit_tag "Sign in" %></div>
<% end %>

<%= link_to 'Not your email?', auth_email_path %>
